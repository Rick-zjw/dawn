{% schema %}
{
  "name": "FAQ Products",
  "settings": [],
  "blocks": [
    {
      "type": "product_item",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Product Title"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Short subtitle or benefit"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "A longer paragraph describing the product, feature, or use case."
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "FAQ Products Section"
    }
  ]
}
{% endschema %}

<style>
  a {
      text-decoration: none;
  }

  .faq-products {
      display: flex;
      gap: 20px;
      font-family: Assistant;
  }

  .faq-products-item {
      flex: 1
  }

  .faq-products-img {
      width: 100%;
      padding-bottom: 100%;
      overflow: hidden;
      position: relative;
      border-radius: 10px;
  }

  .faq-products-item img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
  }

  .faq-products-item img:hover {
      transform: scale(1.1);
      overflow: hidden;
  }

  .faq-products-item p {
      font-weight: bold;
      font-size: 30px;
      color: #000000;
      line-height: 120%;
      text-align: left;
      font-style: normal;
      text-transform: none;
      width: 100%;
      margin: 24px 0;
  }

  .faq-products-item .faq-add-cart-btn {
      width: 100%;
      height: 45px;
      background: #FFCC00;
      border-radius: 4px;
      display: flex;
      justify-content: center;
      align-items: center;
      font-weight: 600;
      font-size: 14px;
      color: #000000;
      text-align: center;
      font-style: normal;
      text-transform: none;
      cursor: pointer;
      border: none;
  }

  @media screen and (max-width:1024px) {
      .faq-products {
          flex-direction: column;
          gap:24px;
      }

      .faq-products-item p {
          font-size: 26px;
          margin: 14px 0;
      }
  }
</style>

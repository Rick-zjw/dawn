{% for block in section.blocks %}
  <div class="faq-products-item">
    <a href="{{ block.settings.product.url }}">
      <div class="faq-products-img">
        <img
          src="{{ block.settings.product.featured_image | image_url: width: 600 }}"
          alt="{{ block.settings.heading }}"
        >
      </div>
      <p class="faq-heading">{{ block.settings.heading }}</p>
      <p class="faq-subheading">{{ block.settings.subheading }}</p>
      <p class="faq-description">{{ block.settings.description }}</p>
    </a>
    <div class="faq-add-cart-btn" data-id="{{ block.settings.product.variants.first.id }}">Add to cart</div>
  </div>
{% endfor %}

  <style>
        .wd-subscribe-container {
            max-width: var(--container-w);
            padding: 80px 0;
            margin: 0 auto;
            display: flex;
            align-items: center;
            gap: 40px;
        }

        .subscribe__media,
        .subscribe__content {
            flex: 1 1 0;
            min-width: 0;
        }

        .subscribe__media img {
            width: 100%;
            height: 100%;
            max-height: 520px;
            object-fit: cover;
            display: block;
        }

        .subscribe__content,
        .subscribe__form {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .subscribe__form {
            gap: 16px;
            max-width: 360px;
            width: 100%;
        }

        .subscribe__content h3 {
            color: #222;
            text-align: center;
            font-size: 40px;
            font-style: normal;
            font-weight: 600;
            line-height: normal;
            margin-bottom: 16px;
        }

        .subscribe__bullets {
            margin-bottom: 40px;
        }

        .subscribe__bullets p {
            color: #222;
            text-align: center;
            font-size: 18px;
            font-style: normal;
            font-weight: 400;
            line-height: 130%;
        }

        .subscribe__form .subscribe__input {
            width: 100%;
            height: 48px;
            padding: 16px 12px;
        }

        .subscribe__form .subscribe__btn {
            width: 100%;
            display: flex;
            height: 48px;
            padding: 16px 12px;
            justify-content: center;
            align-items: center;
            align-self: stretch;
            border: 2px solid #222;
            background: #222;
            color: #FFF
        }
    </style>
     <section class="subscribe-section">
        <div class="wd-subscribe-container">
            <figure class="subscribe__media">
                <img src="https://images.unsplash.com/photo-1500530855697-b586d89ba3ee?q=80&w=1600"
                    alt="Subscribe to updates">
            </figure>

            <div class="subscribe__content">
                <h3>Subscribe to Our Emails</h3>

                <div class="subscribe__bullets">
                    <p>Sharpening Tips & Tutorials</p>
                    <p>Product Updates & New Releases</p>
                    <p>Exclusive Community Access</p>
                    <p>User Stories & Success Cases</p>
                    <p>No spam. Just value.</p>
                </div>

                <form class="subscribe__form" action="#" method="post" onsubmit="return false">
                    <input id="subscribe-email" class="subscribe__input" type="email" name="email"
                        placeholder="Enter your email" required>
                    <button class="subscribe__btn" type="submit">Subscribe</button>
                </form>
            </div>
        </div>
    </section>
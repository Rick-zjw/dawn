<!-- ===== Best Seller Section Start ===== -->
<style>

  .best-seller{ padding:80px 0; color:#FFF; background:#222; }
  .best-seller .container{ max-width:var(--container-w); margin-inline:auto; padding-inline:var(--pad-x); }
   .best-seller h2,.best-seller h3{color:#FFF}
  .best-seller__title{
    font-size:40px; font-weight:600; line-height:1; margin:0 0 32px; position:relative; width:fit-content;
  }
  .best-seller__bg{
    position:absolute; left:0; bottom:-8px; width:200px; height:24px;
    background:linear-gradient(90deg,#FBCB05 -10%, rgba(251,203,5,0) 100%);
  }

  .wd-bs-item{ display:flex; align-items:center; gap:48px; padding:0; flex-direction:row; }
  .wd-bs-item--reverse{ flex-direction:row-reverse; }
  .wd-bs-item__content, .wd-bs-item__media{ flex:1 1 0; min-width:0; }

  .wd-bs-item__title{ font-size:32px; font-weight:600; line-height:1; margin:0 0 16px; }
  .wd-bs-item__desc{ color:#DDD; font-size:20px; font-weight:400; line-height:140%;  }
  .wd-bs-item__content .wd-index-link-btn{ margin-top:32px; }

  .wd-bs-item__media img{ width:100%; height:auto; display:block; aspect-ratio:3/2; object-fit:cover; }

  @media (max-width:768px){
    .wd-bs-item, .wd-bs-item--reverse{ flex-direction:column; gap:24px; }
  }
</style>

<section class="best-seller">
  <div class="container">
    {% if section.settings.title != blank %}
      <h2 class="best-seller__title">
        {{ section.settings.title }}
        <span class="best-seller__bg"></span>
      </h2>
    {% endif %}

    {% for block in section.blocks %}
      <article class="wd-bs-item {% if block.settings.reverse %}wd-bs-item--reverse{% endif %}">
        <div class="wd-bs-item__content">
          {% if block.settings.item_title != blank %}
            <h3 class="wd-bs-item__title">{{ block.settings.item_title }}</h3>
          {% endif %}

         
              <p class="wd-bs-item__desc">{{ block.settings.desc1 }}</p>
              <p class="wd-bs-item__desc">{{ block.settings.desc2}}</p>
              <p class="wd-bs-item__desc">{{ block.settings.desc3 }}</p>
         

          {% if block.settings.btn_label != blank and block.settings.btn_link != blank %}
            <a class="wd-index-link-btn" href="{{ block.settings.btn_link }}">
              {{ block.settings.btn_label }}
            </a>
          {% endif %}
        </div>

        <figure class="wd-bs-item__media">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 1600 }}" alt="{{ block.settings.alt | escape }}">
          {% endif %}
        </figure>
      </article>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Best Seller",
  "settings": [
    { "type": "text", "id": "title", "label": "Section title", "default": "Best Seller" }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Best Seller Item",
      "settings": [
        { "type": "checkbox", "id": "reverse", "label": "Image on left (reverse layout)", "default": false },
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "alt", "label": "Image Alt text" },
        { "type": "text", "id": "item_title", "label": "Item title" },

        { "type": "textarea", "id": "desc1", "label": "Description 1" },
        { "type": "textarea", "id": "desc2", "label": "Description 2" },
        { "type": "textarea", "id": "desc3", "label": "Description 3" },

        { "type": "text", "id": "btn_label", "label": "Button label" },
        { "type": "url", "id": "btn_link", "label": "Button link" }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    { "name": "Best Seller" }
  ]
}
{% endschema %}

<!-- ===== Best Seller Section End ===== -->
